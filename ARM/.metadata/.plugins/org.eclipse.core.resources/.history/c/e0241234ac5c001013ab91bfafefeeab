void MX_FREERTOS_Init(void); /* (MISRA C 2004 rule 8.1) */

/**
  * @brief  FreeRTOS initialization
  * @param  None
  * @retval None
  */
void MX_FREERTOS_Init(void) {
  /* USER CODE BEGIN Init */

  HAL_UART_Receive_IT(&huart1, &bluetooth_rx_data, sizeof(bluetooth_rx_data)); // 블루투스
  HAL_UART_Receive_IT(&huart2, &debug_rx_data, sizeof(debug_rx_data));         // 디버그

  /* USER CODE END Init */

  /* USER CODE BEGIN RTOS_MUTEX */
  /* add mutexes, ... */
  /* USER CODE END RTOS_MUTEX */

  /* USER CODE BEGIN RTOS_SEMAPHORES */
  /* add semaphores, ... */
  /* USER CODE END RTOS_SEMAPHORES */

  /* USER CODE BEGIN RTOS_TIMERS */
  /* start timers, add new ones, ... */
  /* USER CODE END RTOS_TIMERS */

  /* USER CODE BEGIN RTOS_QUEUES */
  /* add queues, ... */
  /* USER CODE END RTOS_QUEUES */

  /* Create the thread(s) */
  /* creation of MOTOR_TASK */
  MOTOR_TASKHandle = osThreadNew(MOTOR_TASK01, NULL, &MOTOR_TASK_attributes);

  /* creation of Ultrasonic */
  UltrasonicHandle = osThreadNew(Ultrasonic01, NULL, &Ultrasonic_attributes);

  /* creation of MANUAL */
  MANUALHandle = osThreadNew(MANUAL01, NULL, &MANUAL_attributes);

  /* creation of AUTO */
  AUTOHandle = osThreadNew(AUTO01, NULL, &AUTO_attributes);

  /* USER CODE BEGIN RTOS_THREADS */
  /* add threads, ... */
  /* USER CODE END RTOS_THREADS */

  /* USER CODE BEGIN RTOS_EVENTS */
  /* add events, ... */
  /* USER CODE END RTOS_EVENTS */

}

/* USER CODE BEGIN Header_MOTOR_TASK01 */
/**
  * @brief  Function implementing the MOTOR_TASK thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_MOTOR_TASK01 */
void MOTOR_TASK01(void *argument)
{
  /* USER CODE BEGIN MOTOR_TASK01 */
  /* Infinite loop */
  for(;;)
  {
    osDelay(1);
  }
  /* USER CODE END MOTOR_TASK01 */
}

/* USER CODE BEGIN Header_Ultrasonic01 */
/**
* @brief Function implementing the Ultrasonic thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_Ultrasonic01 */
void Ultrasonic01(void *argument)
{
  /* USER CODE BEGIN Ultrasonic01 */
  /* Infinite loop */
  for(;;)
  {
    __HAL_TIM_ENABLE_IT(&htim4, TIM_IT_CC3);
    HCSR04_TRIG();
    osDelay(30);

    __HAL_TIM_ENABLE_IT(&htim4, TIM_IT_CC1);
    HCSR04_TRIG();
    osDelay(30);

    __HAL_TIM_ENABLE_IT(&htim4, TIM_IT_CC2);
    HCSR04_TRIG();
    osDelay(30);

    printf("c: %d cm, l: %d cm, r: %d cm \r\n", distance_C, distance_L, distance_R);

    osDelay(100);

//    HCSR04_TRIG();
//    printf("c: %d cm, l: %d cm, r: %d cm \r\n", distance_C, distance_L, distance_R);
//    osDelay(300);
  }
  /* USER CODE END Ultrasonic01 */
}

/* USER CODE BEGIN Header_MANUAL01 */
/**
* @brief Function implementing the MANUAL thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_MANUAL01 */
void MANUAL01(void *argument)
{
  /* USER CODE BEGIN MANUAL01 */
  /* Infinite loop */
  for(;;)
  {
    if (currentState == 0)
       {
         if (bluetooth_rx_data != 0)
         {
           switch (bluetooth_rx_data)
           {
             case 'F':
               forwardMoveNormal();
               break;
             case 'B':
               backwordMove();
               break;
             case 'L':
               leftMove();
               break;
             case 'R':
               rightMove();
               break;
             case 'X':
               stopMove();
//               printf("Mode: Manual (Stopped)\r\n");
               break;
             case 'S':
               stopMove();
               break;
             case 'Y':
               currentState = 1;
               stopMove(); // 모드 전환 시 정지
//               printf("Mode: Auto\r\n");
               break;
           }
           bluetooth_rx_data;
         }
       }
       osDelay(50);
  }
  /* USER CODE END MANUAL01 */
}

/* USER CODE BEGIN Header_AUTO01 */
/**
* @brief Function implementing the AUTO thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_AUTO01 */
void AUTO01(void *argument)
{
  /* USER CODE BEGIN AUTO01 */
  /* Infinite loop */
  for(;;)
  {
    if (currentState == 1)
    {

//      printf("Auto Logic: C:%d cm, L:%d cm, R:%d cm \r\n", distance_C, distance_L, distance_R);


      if (distance_C < safeDistance && distance_C != 0)
      {
        // 전방 장애물 감지: 정지 후 회피 판단
        stopMove();
        osDelay(200);

        if (distance_L > safeDistance && distance_R > safeDistance)
        {
          // 양쪽 모두 여유가 있을 때 (전방만 막힘)

          backwordMove();
          osDelay(500);
          stopMove();
          osDelay(100);

          if (distance_L > distance_R) // 왼쪽이 더 멀면 왼쪽으로 회전
          {
            leftMove();
            osDelay(700);
          }
          else // 오른쪽이 더 멀거나 같으면 오른쪽으로 회전
          {
            rightMove();
            osDelay(700);
          }
          stopMove(); // 회전 후 잠시 정지
          osDelay(200);
        }
        else if (distance_L > safeDistance) // 왼쪽이 여유 있다면 좌회전
        {

          leftMove();
          osDelay(500);
          stopMove();
          osDelay(100);
        }
        else if (distance_R > safeDistance) // 오른쪽이 여유 있다면 우회전
        {

          rightMove();
          osDelay(500);
          stopMove();
          osDelay(100);
        }
        else // 모든 방향이 막혔을 때 (앞, 좌, 우 모두 가까움)
        {

          backwordMove();
          osDelay(1000);
          stopMove();
          osDelay(200);
          // 후진 후 다시 상황을 판단하거나, 180도 회전 시도
          if (distance_L > distance_R)
          { // 후진 후 다시 측정해서 덜 막힌 쪽으로
            leftMove();
          }
          else
          {
            rightMove();
          }
          osDelay(1000);
          stopMove();
          osDelay(200);
        }
      }
      else // 전방에 장애물 없음, 계속 전진
      {

        forwardMoveNormal();
      }

      if (bluetooth_rx_data == 'X') // 'X' Manual 모드 전환
      {
        currentState = 0;
        stopMove(); // 모드 전환 시 정지
//        printf("Mode: Manual\r\n");
        bluetooth_rx_data = 0;
      }
    }
    osDelay(50);
  }
  /* USER CODE END AUTO01 */
}

